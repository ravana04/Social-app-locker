<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Menu"
    tools:openDrawer="start"
    android:background="#1D1D1D"
    android:id="@+id/drawer">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:title="Navigation"
            android:background="@color/colorAccent"
            app:titleTextColor="@color/cardview_light_background"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/enable"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="200dp"
                android:background="@color/colorAccent"
                android:text="Enable lock"
                android:fontFamily="@font/hemi"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:textColorHighlight="@color/cardview_shadow_start_color"
                android:layout_width="180dp"
                android:layout_height="35dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/allapp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="160dp"
            android:background="@drawable/app2"
            android:layout_height="160dp"/>
        <Button
            android:id="@+id/locapp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="160dp"
            android:background="@drawable/app3"
            android:layout_height="160dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/timeuse"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="160dp"
                android:background="@drawable/app4"
                android:layout_height="160dp"/>
            <Button
                android:id="@+id/abtus"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="160dp"
                android:background="@drawable/app5"
                android:layout_height="160dp"/>
        </LinearLayout>
    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenu"

        app:itemTextColor="#ffffff"
        app:menu="@menu/icon_menu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"
        android:background="@color/cardview_dark_background"
        app:itemIconTint="#ffffff"

        app:itemHorizontalPadding="10dp"
        />
</androidx.drawerlayout.widget.DrawerLayout>